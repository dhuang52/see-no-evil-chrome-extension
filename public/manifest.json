{
  "name": "blur",
  "description" : "A spoiler blocker for YouTube",
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/",
        "*://*.youtube.com/watch?*",
        "*://*.youtube.com/results?*",
        "*://*.youtube.com/c*"
      ],
      "js": ["youtube.bundle.js"],
      "css": ["youtube.css"]
    }
  ],
  "version": "1.0",
  "manifest_version": 3
}